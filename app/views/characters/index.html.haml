%h1 Listing characters

%table
  %thead
    %tr
      %th Campaign
      %th Name
      %th Desc
      %th
      %th
      %th

  %tbody
    - @characters.each do |character|
      %tr
        %td= character.campaign.name
        %td= character.name
        %td= character.desc
        %td= link_to 'Show', character
        %td= link_to 'Edit', edit_character_path(character)
        %td= link_to 'Destroy', character, method: :delete, data: { confirm: t('.char_destroy_confirm_msg') }

%br

= link_to t('.char_new_msg'), new_character_path
