%p#notice= notice

%p
  %b Name:
  = @campaign.name
%p
  %b Desc:
  = @campaign.desc

%p Tasks:
%table
  %tbody
    - @campaign.characters.each do |character|
      %tr
        %td= character.campaign.name
        %td= character.name
        %td= character.desc
        %td= link_to 'Show', character
        %td= link_to 'Edit', edit_character_path(character)
        %td= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }

%p= link_to 'Add Character', new_character_path(campaign_id: @campaign)

= link_to 'Edit', edit_campaign_path(@campaign)
\|
= link_to 'Back', campaigns_path
