.campaigns_wrapper
  .container

    - @campaigns.in_groups_of(3, false).each do |group|
      .row.row-cols-3.card_row
        - group.each do |item|
          .col
            .card
              .content
                %h3= item.name
                %button show
                %button edit
                %button destroy

    .list_inner
      %h1 Listing campaigns

      %table
        %thead
          %tr
            %th Name
            %th Desc
            %th
            %th
            %th

        %tbody
          - @campaigns.each do |campaign|
            %tr
              %td= campaign.name
              %td= campaign.desc
              %td
                .button.small_btn
                  = link_to 'Show', campaign
              %td
                .button.small_btn
                  = link_to 'Edit', edit_campaign_path(campaign)
              %td
                .button.small_btn
                  = link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' }

      %br
      
      .button
        = link_to 'New Campaign', new_campaign_path
